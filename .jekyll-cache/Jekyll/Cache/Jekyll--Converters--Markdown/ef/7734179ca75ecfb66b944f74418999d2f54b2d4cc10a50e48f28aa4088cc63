  "structureType": "collection",
  "level": "1",
  "isPartOf": "http://scta.info/resource/sententia",
  "canonicalManifestation":
    {
        "@id": "http://scta.info/resource/plaoulcommentary/critical",
        "title": "Critical Edition for Plaoul Commentary",
        "type": "critical",
